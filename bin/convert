#!/usr/bin/env ruby

require_relative '../lib/gpx2obj'

#uv_mapping = Gpx2Obj::UvMapping::YamlReader.new('assets/texture.cfg.yml')
uv_mapping = Gpx2Obj::UvMapping::SvgReader.new('wireframe-exp.svg')
#uv_mapping = Gpx2Obj::UvMapping::CfgReader.new('assets/texture.cfg')

uv_mapping.write_to_yaml

reader = Gpx2Obj::ShpReader.new('spec/fixtures/carshape.shp', uv_mapping)

reader.model1.write("out/model1.obj", Gpx2Obj::ObjWriter)
reader.model2.write("out/model2.obj", Gpx2Obj::ObjWriter)
